<h3>{{viewTitle}}</h3>

<form action="/user" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{User.fullName}}">
        <div class="text-danger">
            {{user.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Email" value="{{User.email}}">
        <div class="text-danger">
            {{user.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Password</label>
            <input type="password" class="form-control" name="password" placeholder="password" value="{{User.password}}">
            <div class="text-danger">
            {{user.passwordError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>Date of Birth</label>
            <input type="Date" class="form-control" name="Date_of_birth" placeholder="Date_of_birth" value="{{User.Date_of_birth}}">
            <div class="text-danger">
            {{user.date_of_birthError}}</div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/user/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>